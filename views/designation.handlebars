<body>
{{>navbar}}



<div id="hola-page">

    <section style="padding-top: 140px">
        <div class="container">
            <div class="row ">


                <div class="col-md-5">
                    <a class="h-btn-text h-active btn" href="./company" type="button" >Companies</a>
                </div>
                <div class="col-md-2">
                    <a class="h-btn-text btn"  type="button" href="./designation" >Designations</a>
                </div>
                <div class="col-md-5">
                    <a class="h-btn-text h-dictionary btn" type="button" href="./city" >Locations</a>
                </div>

            </div>
        </div>
    </section>
    <section class="hc-section">

        <div class="container">
            <div class="card-title">
                <h2>Designation Directory</h2>
            </div>
            <div class="card">

                <div class="card-block" id="designation-dir">
                    {{#if text}}

                        {{#if exist}}
                            <div class="row">
                                {{#each designation}}
                                    <div class="col-md-3"><b><a
                                            href="../search?type=adv&job_title={{{this._id}}}">{{{this._id}}}</a></b>
                                    </div>

                                {{/each}}

                            </div>
                            <input onclick="nextDesignation()" type="button" class="btn pull-right" value="Next"/>
                        {{else}}
                            <div class="search-info">No Results found</div>
                        {{/if}}




                    {{/if}}

                </div>
            </div>


        </div>

    </section>
</div>
